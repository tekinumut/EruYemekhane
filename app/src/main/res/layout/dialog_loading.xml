<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/nonProgresBar"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateTint="@color/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/loadingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/loadingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/_m_please_wait"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="@id/nonProgresBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nonProgresBar"
        app:layout_constraintTop_toTopOf="@id/nonProgresBar" />
</androidx.constraintlayout.widget.ConstraintLayout>